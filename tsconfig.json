{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false,
        "noEmit": false
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
